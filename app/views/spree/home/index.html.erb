<% content_for :subheader do %>
  <%= render 'slider' %>
<% end %>

<div id="welcome-message">
  <div class="container">
    <h1>
      Welcome to our amazing store!
      <br>
      Choose <a href="/products">anything</a> you wish, weâ€™ll ship it <a href="/products">anywhere!</a>
    </h1>
  </div>
</div>

<div class="container">
  <% if @featured_products %>
    <div id="featured-products" class="row">
      <h3>Featured Products</h3>
      <hr>
      <ul class="carousel">
        <% @featured_products.each do |product| %>
          <%= render 'product', :product => product %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @latest_products %>
    <div id="latest-products" class="row">
      <h3>Latest Products</h3>
      <hr>
      <ul class="carousel">
        <% @latest_products.sort_by{ |product| product.created_at }.reverse.each do |product| %>
          <%= render 'product', :product => product %>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<li id="product_<%= product.id %>" class="columns four" data-hook="featured_products_list_item">
<div class="product-image">
  <%= link_to product_image(product), product %>
</div>
<%= link_to truncate(product.name, :length => 50), product, :class => 'product-name', :title => product.name %>
<div class="product-sku">
  <%= product.sku %>
</div>
<span class="price selling hidden"><%= product.display_price %></span>
</li>
